# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/restauracja

# JWT Secrets - zmień na unikalne klucze w produkcji!
# Użyj: openssl rand -base64 32 (dla każdego klucza)
JWT_SECRET=restauracja_super_tajny_klucz_jwt_2024_zmien_to
JWT_REFRESH_SECRET=restauracja_super_tajny_klucz_refresh_2024_zmien_to

# Server Port
PORT=3000

# Frontend URL (dla CORS)
FRONTEND_URL=http://localhost:4200

# Admin credentials (używane przy seedowaniu)
ADMIN_EMAIL=admin@restauracja.pl
ADMIN_PASSWORD=Admin123!

# Google reCAPTCHA v3
# Pobierz klucze z: https://www.google.com/recaptcha/admin
RECAPTCHA_SITE_KEY=twoj_recaptcha_site_key
RECAPTCHA_SECRET_KEY=twoj_recaptcha_secret_key
RECAPTCHA_SCORE_THRESHOLD=0.5
# W development możesz ustawić SKIP_RECAPTCHA=true aby pominąć weryfikację
SKIP_RECAPTCHA=false

# Web Push Notifications (VAPID Keys)
# Wygeneruj klucze: npx web-push generate-vapid-keys
# VAPID_PUBLIC_KEY - klucz publiczny (udostępniany frontendowi)
# VAPID_PRIVATE_KEY - klucz prywatny (tylko backend, NIGDY nie commitować!)
# VAPID_SUBJECT - email kontaktowy lub mailto: URL
VAPID_PUBLIC_KEY=twoj_vapid_public_key
VAPID_PRIVATE_KEY=twoj_vapid_private_key
VAPID_SUBJECT=mailto:admin@restauracja.pl

# Email Service (Resend)
# Załóż konto na: https://resend.com
# Wygeneruj API Key: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxx
# Email nadawcy - musi być zweryfikowana domena lub użyj onboarding@resend.dev do testów
RESEND_FROM_EMAIL=rezerwacje@twoja-domena.pl
RESEND_FROM_NAME=U Kelnerow
